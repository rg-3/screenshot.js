{
  "manifest_version": 2,
  "name": "Screenshot",
  "description": "A browser extension that takes screenshots.",
  "version": "0.4.0",
  "background": {"page": "html/background.html"},
  "permissions": ["commands", "notifications", "activeTab", "webNavigation", "<all_urls>"],
  "browser_action": {
    "default_popup": "html/browser_action.html"
  },
  "icons": {
    "48":  "images/camera48.png",
    "64":  "images/camera64.png",
    "96":  "images/camera96.png",
    "128": "images/camera128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/lib/content-scripts/set-cross-origin.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "capture-visible-tab": {
      "suggested_key": {
        "default": "Ctrl + Shift + X",
        "mac": "Command + Shift + X"
      },
      "description": "Takes a screenshot of the visible area on the current tab."
    },
    "capture-html5-video": {
      "suggested_key": {
        "default": "Ctrl + Shift + V",
        "mac": "Command + Shift + V"
      },
      "description": "Takes a screenshot of the video being played on the current tab."
    }
  }
}
